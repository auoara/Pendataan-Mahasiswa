#include <iostream>
#include <string>
using namespace std;

struct Mahasiswa {
    string nama;
    string nim;
    string jurusan;
};

void inputData(Mahasiswa& mhs) {
    cout << "Masukkan Nama: ";
    cin.ignore();  // Menghindari masalah dengan cin sebelumnya
    getline(cin, mhs.nama);
    cout << "Masukkan NIM: ";
    cin >> mhs.nim;
    cout << "Masukkan Jurusan: ";
    cin >> mhs.jurusan;
}

void tampilkanData(const Mahasiswa& mhs) {
    cout << "\nData Mahasiswa: " << endl;
    cout << "Nama: " << mhs.nama << endl;
    cout << "NIM: " << mhs.nim << endl;
    cout << "Jurusan: " << mhs.jurusan << endl;
}

int main() {
    Mahasiswa mhs1;  // Membuat objek mahasiswa

    // Input data mahasiswa
    inputData(mhs1);

    // Menampilkan data mahasiswa
    tampilkanData(mhs1);

    return 0;
}
